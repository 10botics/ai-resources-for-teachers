				<button data-tag="all" class="tag-filter active px-4 py-2 rounded-full font-medium transition-all bg-indigo-600 text-white hover:bg-indigo-700">
					全部 (<span class="count"></span>)
				</button>
			</div>
		</div>

		<div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3" id="resources-grid">
			{resources.map((item, index) => (
				<div class="resource-card bg-white rounded-xl shadow-sm border border-slate-200 p-6 hover:shadow-md hover:border-indigo-300 transition-all group" data-tags={item.tags.join(',')}>
					<div class="flex flex-col h-full">
						<h3 class="text-xl font-bold text-slate-800 mb-2 group-hover:text-indigo-600 transition-colors">
							{item.title}
						</h3>
						<p class="text-sm text-slate-500 mb-3">作者: {item.author}</p>
						<p class="text-slate-600 mb-4 flex-grow">
							{item.description}
						</p>
						<div class="flex flex-wrap gap-2 mb-3">
							{item.tags.map(tag => (
								<span class="px-2 py-1 bg-indigo-50 text-indigo-700 text-xs rounded-full font-medium">
									#{tag}
								</span>
							))}
						</div>
						<div class="flex gap-3 mt-auto pt-3 border-t border-slate-100">
							<a href={item.link} target="_blank" rel="noopener noreferrer" 
							   class="flex-1 text-center px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors text-sm font-medium">
								查看演示
