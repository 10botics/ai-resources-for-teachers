---
import Layout from '../../layouts/Layout.astro';

const faqs = [
  // Add FAQs here
];
---

<Layout title="Google Workspace FAQ">
	<div class="max-w-3xl mx-auto">
		<div class="mb-8">
			<a href="/faq" class="text-indigo-600 hover:text-indigo-700 flex items-center gap-2 mb-4">
				← 返回所有常見問題
			</a>
			<h1 class="text-4xl font-bold text-slate-900 mb-4">Google Workspace 常見問題</h1>
			<p class="text-xl text-slate-600">關於 Google Workspace 和 AI 工具的常見問題</p>
		</div>

		<div class="space-y-4">
			{faqs.map((faq, index) => (
				<div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 group relative" id={`faq-${index + 1}`}>
					<a href={`#faq-${index + 1}`} class="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity text-slate-400 hover:text-indigo-600" aria-label={`連結到問題 ${index + 1}`}>
						<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
						</svg>
					</a>
					<h3 class="text-lg font-medium text-slate-800 flex items-start gap-3 mb-3">
						<span class="text-indigo-600 font-bold">Q{index + 1}.</span>
						<span>{faq.question}</span>
					</h3>
					<div class="text-slate-600 leading-relaxed flex gap-3 ml-8">
						<span class="text-green-600 font-bold">A.</span>
						<div>{faq.answer}</div>
					</div>
				</div>
			))}
		</div>
	</div>
</Layout>

